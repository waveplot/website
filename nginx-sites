# Copy this file into your nginx sites-enabled directory
server {
    listen 80;

    root /var/www;

    location / {
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    # This entry is for the WavePlot webservice, which should also be
    # installed and run.
    location /api {
        include uwsgi_params;
        uwsgi_pass unix:/tmp/wpws.sock;
    }
}
